@{ 
    var UserName = "";
    var isLogin = false;
    if (Session["User"] != null && Session["User"] != "")
    {
        UserName = ((GuvenliDepolama.Models.User)Session["User"]).Name + " " + ((GuvenliDepolama.Models.User)Session["User"]).SurName;
        isLogin = true;
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ASP.NET Uygulamam</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/bootstrap.css">
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">
                <img src="~/Content/Images/logo.png" class="img-fluid logo text-info" style="height: 64px; width:64px; margin-top: -24px;" alt="" />
            </a>
            @if (isLogin)
            {
                <span style="color:wheat">Merhaba @UserName</span>
                <a href="/Secure/LogOut">
                    <button type="button" class="btn btn-primary" style="margin-left: 1150px;">
                        Log out
                    </button>
                </a>
            }
            else
            {
                <a href="/Secure/Login">
                    <button type="button" class="btn btn-primary" style="margin-left: 1150px;">
                        Go to your Drive
                    </button>
                </a>
            }

        </div>
    </nav>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" style="margin-top:-20px; height: 92%;">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @*@Scripts.Render("~/bundles/bootstrap")*@    
    @RenderSection("scripts", required: false)
</body>
</html>
